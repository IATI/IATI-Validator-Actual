<?xml version="1.0" encoding="UTF-8"?>
<iati-activities xmlns:me="http://iati.me" me:testclass="identifiers" version="2.02">
  <me:ignore>1.2.11</me:ignore>
  <me:ignore>1.2.8</me:ignore>

  <!-- 1.2.1 - No whitespace in identifier -->
  <me:testset>
    <me:expect>1.2.1</me:expect>

    <reporting-org ref=" XYZ"/>
    <reporting-org ref="XYZ "/>
    <participating-org ref="
        XYZ "/>

    <provider provider-activity-id=" ABC"/>
    <receiver receiver-activity-id="ABC "/>

    <iati-activity>
      <iati-identifier>  ABCXYZ  </iati-identifier>
    </iati-activity>

    <iati-activity>
      <iati-identifier>
        ABCXYZ
      </iati-identifier>
    </iati-activity>


  </me:testset>

  <!-- 1.2.2 - No org id -->
  <me:testset>
    <me:expect>1.2.2</me:expect>

    <reporting-org/>
    <participating-org role="4"/>
    <provider-org/>
    <receiver-org/>
  </me:testset>

  <!-- 1.2.7 - No empty identifier attributes -->
  <me:testset>
    <me:expect>1.2.7</me:expect>

    <reporting-org ref=""/>
    <participating-org role="4" ref=" "/>
    <provider-org ref="
      "/>
    <receiver-org ref=""/>
  </me:testset>

  <!-- 1.2.10 - 5-digit org id -->
  <me:testset>
    <me:expect>1.2.10</me:expect>

    <reporting-org ref="12345"/>
    <participating-org role="4" ref="98765"/>
    <provider-org ref="11111"/>
    <receiver-org ref="22222"/>
  </me:testset>

</iati-activities>
